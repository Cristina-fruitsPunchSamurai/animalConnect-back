{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
     "rules": {
        "import/extensions": ["error", "always", { "ignorePackages": true }],
        "commonjs": true,
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
    }
}
